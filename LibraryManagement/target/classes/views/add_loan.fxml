<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.library.controllers.AddLoanController"
      spacing="15"
      alignment="TOP_CENTER"
      style="-fx-padding: 30; -fx-background-color: #f5f5f5;">

    <Label text="Create New Loan" 
           style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333333;" />

    <Separator />

    <!-- Book Selection -->
    <VBox spacing="8">
        <Label text="Select Book *" style="-fx-font-size: 12; -fx-font-weight: bold;" />
        <ComboBox fx:id="comboBook" promptText="Choose a book..." prefWidth="400">
            <tooltip>
                <Tooltip text="Select the book to borrow" />
            </tooltip>
        </ComboBox>
    </VBox>

    <!-- Branch Selection -->
    <VBox spacing="8">
        <Label text="Select Branch *" style="-fx-font-size: 12; -fx-font-weight: bold;" />
        <ComboBox fx:id="comboBranch" promptText="Choose a branch..." prefWidth="400">
            <tooltip>
                <Tooltip text="Select the branch location" />
            </tooltip>
        </ComboBox>
    </VBox>

    <!-- Borrower Selection -->
    <VBox spacing="8">
        <Label text="Select Borrower *" style="-fx-font-size: 12; -fx-font-weight: bold;" />
        <ComboBox fx:id="comboBorrower" promptText="Choose a borrower..." prefWidth="400">
            <tooltip>
                <Tooltip text="Select the person borrowing the book" />
            </tooltip>
        </ComboBox>
    </VBox>

    <!-- Date Out -->
    <VBox spacing="8">
        <Label text="Date Out" style="-fx-font-size: 12; -fx-font-weight: bold;" />
        <DatePicker fx:id="datePickerOut" prefWidth="400" />
    </VBox>

    <!-- Due Date -->
    <VBox spacing="8">
        <Label text="Due Date *" style="-fx-font-size: 12; -fx-font-weight: bold;" />
        <DatePicker fx:id="datePickerDue" prefWidth="400" />
        <Label text="(e.g., 14 or 30 days from date out)" style="-fx-font-size: 10; -fx-text-fill: #666666;" />
    </VBox>

    <Separator />

    <!-- Button Bar -->
    <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
        <Button fx:id="btnBorrow" text="✓ Create Loan" style="-fx-font-size: 12; -fx-padding: 10 40 10 40; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" 
                onAction="#borrow" />
        <Button fx:id="btnCancel" text="✕ Cancel" style="-fx-font-size: 12; -fx-padding: 10 40 10 40; -fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;" 
                onAction="#cancel" />
    </HBox>

    <Region VBox.vgrow="ALWAYS" />

</VBox>
