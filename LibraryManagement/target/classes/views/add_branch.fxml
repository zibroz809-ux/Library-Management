<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.library.controllers.AddBranchController"
      spacing="10"
      style="-fx-padding: 20;">

    <Label text="Add New Branch" style="-fx-font-size: 20px;" />

    <TextField fx:id="txtId" promptText="Branch ID"/>
    <TextField fx:id="txtName" promptText="Branch Name"/>
    <TextField fx:id="txtAddress" promptText="Branch Address"/>

    <Button text="Save" fx:id="btnSave" style="-fx-padding: 10;" />
</VBox>
