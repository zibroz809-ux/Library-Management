<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.library.controllers.AddBookCopyController"
      spacing="10"
      style="-fx-padding: 20;">

    <Label text="Add Book Copy" style="-fx-font-size: 20px;" />

    <TextField fx:id="txtBookId" promptText="Book ID"/>
    <TextField fx:id="txtBranchId" promptText="Branch ID"/>
    <TextField fx:id="txtCopies" promptText="Copies"/>

    <Button text="Save" fx:id="btnSave" style="-fx-padding: 10;"/>
</VBox>
